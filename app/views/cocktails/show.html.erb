<div class="container">
  <h2>
    Cocktail
  </h2>
  <h3><%= @cocktail.name %></h3>
  <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> -- <%= dose.ingredient.name %>   <%= link_to "", dose_path(dose), method: :delete, class: "far fa-trash-alt" %></li>
        <% end %>
  </ul>
</div>
<div class="container">
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
</div>
<div class="container">
  <%= link_to "Back to Homepage", cocktails_path, class: 'btn btn-primary' %>
</div>
